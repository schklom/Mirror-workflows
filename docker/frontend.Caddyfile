:80 {
        header {
            Access-Control-Allow-Origin "*"
            Access-Control-Allow-Credentials true
            Access-Control-Allow-Methods "*"
            Access-Control-Allow-Headers "*"
            defer
        }

        encode zstd gzip
        root * /var/www/html
        file_server

        handle /transcribe* {
            reverse_proxy backend:9090
        }

        handle /video/transcribe* {
            reverse_proxy backend:9090
        }

        handle /getsubs* {
            reverse_proxy backend:9090
        }

        handle /translate* {
            reverse_proxy backend:9090
        }

        handle /history* {
            reverse_proxy backend:9090
        }

        handle /status* {
            reverse_proxy backend:9090
        }
}