{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentSize": 2,
		"lineWidth": 80
	},
	"files": {
		"ignore": ["./node_modules", "./.next"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
